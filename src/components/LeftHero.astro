---
import Style from '../../public/site.css';
const{
    heroImage='',
    heroSummary='',
    heroTitle='',
    heroList=[]
}= Astro.props;
---

<div class="hero-left">
    <div class="hero-left--image" style={heroImage}>
        
    </div>
    <div class="hero-left--text">
        <h2 class="hero-left--title">
            {heroTitle}
        </h2>
        <ul class="hero-left--list">
            {heroList.map((item) =>(<li class="hero-left--list-item">{item}</li>))}
        </ul>
        <p class="hero-left--desc">
            {heroSummary}                
        </p>
        
    </div>
</div>
<br />